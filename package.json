{
  "name": "nodejs-base",
  "author": "Alexey Fedorov",
  "license": "ISC",
  "version": "1.0.0",
  "description": "NodeJs base mentoring",
  "main": "./src/index.ts",
  "scripts": {
    "task1": "cross-env NODE_ENV=development nodemon -w src --exec \"ts-node --project tsconfig.json\" src/task1.ts",
    "task1:lint": "concurrently \"npm run run:task1\" \"npm run lint:watch\"",

    "task2": "cross-env NODE_ENV=development nodemon -w src --exec \"ts-node --project tsconfig.json\" src/task2.ts direct-read ",
    "task2:lint": "concurrently \"npm run run:task2 fixed\" \"npm run lint:watch\"",

    "lint": "eslint --ext=js,ts ./src --quiet",
    "lint:watch": "watch \"npm run lint -- \" ./src -du --wait=0.2",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git@git.epam.com:Alexey_Fedorov1/nodejsbase.git"
  },
  "devDependencies": {
    "@types/node": "14.14.31",
    "@types/prettier": "2.2.2",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "concurrently": "6.0.0",
    "cross-env": "7.0.3",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.5",
    "eslint-plugin-prettier": "3.3.1",
    "prettier-eslint": "12.0.0",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "typescript": "4.2.2",
    "watch": "1.0.2"
  },
  "dependencies": {
    "convict": "6.0.0",
    "convict-format-with-validator": "6.0.0",
    "csvtojson": "2.0.10"
  }
}
