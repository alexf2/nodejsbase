datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id String @id @db.Uuid
    login String @unique @db.VarChar(64)
    password String @db.VarChar(64)
    age Int
    isDeleted Boolean?
}

